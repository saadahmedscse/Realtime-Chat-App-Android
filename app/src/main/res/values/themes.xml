<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SparkConvo" parent="Theme.Material3.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/static_main</item>
        <item name="colorPrimaryVariant">@color/colorWhite</item>
        <item name="colorOnPrimary">@color/colorDarkGrey</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/static_main</item>
        <item name="colorSecondaryVariant">@color/colorWhite</item>
        <item name="colorOnSecondary">@color/colorDarkGrey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.SparkConvo" parent="Base.Theme.SparkConvo" />

    <style name="BottomSheetStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Modal</item>
    </style>

    <style name="Modal" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet</item>
    </style>
</resources>